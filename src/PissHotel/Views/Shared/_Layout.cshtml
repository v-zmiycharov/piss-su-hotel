<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - @Global.ApplicationName</title>
    @Styles.Render("~/Content/css")

    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-44720939-1', 'auto');
        ga('send', 'pageview');

    </script>
</head>
<body>
    @{
        string action = ViewContext.RouteData.Values["action"].ToString();
    }
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink(Global.ApplicationName, MVC.Home.ActionNames.Index, MVC.Home.Name, new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="@(action.Equals(MVC.Home.ActionNames.Rooms) ? "active" : "")">@Html.ActionLink(Global.Rooms, MVC.Home.ActionNames.Rooms, MVC.Home.Name)</li>
                    <li class="@(action.Equals(MVC.Home.ActionNames.Contact) ? "active" : "")">@Html.ActionLink(Global.Contact, MVC.Home.ActionNames.Contact, MVC.Home.Name)</li>
                    <li class="@(action.Equals(MVC.Home.ActionNames.Gallery) ? "active" : "")">@Html.ActionLink(Global.Gallery, MVC.Home.ActionNames.Gallery, MVC.Home.Name)</li>
                    <li class="@(action.Equals(MVC.Home.ActionNames.Locality) ? "active" : "")">@Html.ActionLink(Global.Locality, MVC.Home.ActionNames.Locality, MVC.Home.Name)</li>
                    <li class="@(action.Equals(MVC.Home.ActionNames.Holidays) ? "active" : "")">@Html.ActionLink(Global.Holidays, MVC.Home.ActionNames.Holidays, MVC.Home.Name)</li>
                    <li class="@(action.Equals(MVC.Home.ActionNames.Reservations) ? "active" : "")">@Html.ActionLink(Global.Reservations, MVC.Home.ActionNames.Reservations, MVC.Home.Name)</li>
                </ul>
                @Html.Partial(MVC.Shared.Views._LanguageSelection)
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - @Global.ApplicationName</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/js")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
