@{
    ViewBag.Title = Global.Contact;
}

<div class="jumbotron">
    <div class="row">
        <div class="col-xs-6 text-right">
            <p><b>@Global.Contact:</b></p>

            <p style="font-size: 16px;"><b>@Html.Raw(Global.ContactMain)</b></p>

            <p style="font-size: 16px;"><b>@Global.ForReservations @Html.ActionLink(Global.Here, MVC.Home.ActionNames.Reservations, MVC.Home.Name)</b></p>
        </div>

        <div class="col-xs-6">
            <img src="@Links.Content.img.contact_jpg" />
        </div>
    </div>
</div>